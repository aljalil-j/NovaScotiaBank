@model NovaScotia.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/ScotiaLayout.cshtml";
}

<style>
    #signupPic {
        width: 100%;
        height: 330px;
    }

    #logi {
        width: 70px;
        height: 70px;
    }
</style>

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">


<div class="container" style="background-color:#F0F0F0">
   
                
    <div class="jumbotron table-responsive">
        <div class="col-md-6" style="background-size:100%" id="slides">
            <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/scotiacard.jpg" class="d-block w-100 img-responsive" alt="...">

                    </div>
                    <div class="carousel-item">
                        <img src="~/images/scotiasupport.jpg" class="d-block w-100 img-responsive" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/mastarcard.jpg" class="d-block w-100 img-responsive" alt="...">
                    </div>
                </div>

                <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>

            </div>
        </div>
    </div>
</div>
            
<!--container end.//-->

<br>
<br>
<article class="bg-secondary mb-3">
    <div class="card-body text-center">
        <h3 class="text-white mt-3">Forget The Branch Bank Online!</h3>
        <p class="h5 text-white">
            Use Scotia Online  <br> for E-Payments, Customer Service, Updates
            and product landing pages
        </p>   <br>
        <p>
            <a class="btn btn-warning" asp-controller="ScotiaHome" asp-action="Index">
                Back To Home Page
                <i class="fa fa-window-restore "></i>
            </a>
        </p>
    </div>
    <br><br>
</article>
