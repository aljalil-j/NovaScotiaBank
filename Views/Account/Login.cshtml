@model NovaScotia.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    
}

<style>
    #signupPic {
        width: 100%;
        height: 330px;
    }

    #logi {
        width: 70px;
        height: 70px;
    }
</style>

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">


<div class="container" style="background-color:#F0F0F0">
    @*<img src="~/images/JPSview.png" id="signupPic" />*@
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <header class="card-header">
                    <a href="#" class="float-right btn btn-outline-primary mt-1">Login Page</a>

                    <img src="~/images/Scotia/scotialogo.png" />
                </header>
                <article class="card-body">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>



                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe" class="form-control" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Login</button>

                    </form>
                </article>
                
            </div>
        </div>
    </div>
</div>
<!--container end.//-->

<br>
<br>
<article class="bg-secondary mb-3">
    <div class="card-body text-center">
        <h3 class="text-white mt-3">Make Payments So much Easier!</h3>
        <p class="h5 text-white">
            
        </p>   <br>
        <p>
            <a class="btn btn-warning" asp-controller="Home" asp-action="Index">
                Back To Home Page
                <i class="fa fa-window-restore "></i>
            </a>
        </p>
    </div>
    <br><br>
</article>
